{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs
{% endblock %}

{% block body %}
	<h1>Liste des utilisateurs</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>Groupe</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.groupeUser.name }}</td>
					<td>
						<div class="btn-group">
							<a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-primary" aria-current="page">
								<i class="bi bi-three-dots"></i>
							</a>
							<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary active">
								<i class="bi bi-pencil-square"></i>
							</a>
						</div>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">Table vide.</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_user_new') }}" class="btn btn-success">
		Nouveau
	</a>
{% endblock %}
